<div class="navbar navbar-expand-sm navbar-light navbar-polol">
      <a class="navbar-brand" href="#">
        <%= image_tag("polollogo.png") %>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link <%= 'active' if current_page?('/') %>" href="/">Home</a>
      </li>

      <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <% if current_user.professional? %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="/assets/professional.png" />
        <% else %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="/assets/customer.png" />
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        
            <% if current_user.professional? %>
              <%= link_to "Editar Perfil",  edit_professional_registration_path, class: "dropdown-item" %>
            <% else %>
              <%= link_to "Editar Perfil", edit_customer_registration_path, class: "dropdown-item" %>
            <% end %>

            <% if current_user.professional? %>
              <%= link_to "Ver Perfil",  professional_path(current_user.id), class: "dropdown-item" %>
            <% else %>
              <%= link_to "Ver Perfil", customer_path(current_user.id), class: "dropdown-item" %>
            <% end %>

            <% if current_user.professional? %>
              <%= link_to "Cerrar Sesión", destroy_professional_session_path, method: :delete, class: "dropdown-item" %>
            <% else %>
              <%= link_to "Cerrar Sesión", destroy_customer_session_path, method: :delete, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "¿Eres Cliente?", new_customer_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "¿Eres Profesional?", new_professional_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Regístrate", pages_sign_up_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
