<div class="container">
  <div class="row justify-content-center" style="width: 100%; height: 400px;">
    <div class="col-md-6">
      <div class="padding-nav-card">
        <div class="card-form">
        <h4>Listado de profesionales cercanos</h4>
          <% @professionals.each  do |professional| %>            
            <img src="" alt="">
            <span class="text"><%= professional.first_name %></span>
            <span class="text"><%= professional.last_name %></span>
            <button class="btn-blue-small btn-position"><%= link_to  "ver perfil", professional_path(professional) %></button>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="my-2" id="map"
        style="width: 100%; height: 100%;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
